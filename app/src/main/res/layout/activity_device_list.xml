<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:fitsSystemWindows="true"
    android:layout_marginTop="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".blueconn.DeviceList">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My cars"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/Pairbutton"
        android:layout_below="@+id/textView" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Nextbutton"
        android:background="@color/colorPrimary"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/nbutton" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Pairbutton"
        android:background="@color/colorPrimary"
        android:layout_above="@id/Nextbutton"
        android:layout_marginTop="48dp">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paired Cars"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/button" />
    </FrameLayout>






</RelativeLayout>
